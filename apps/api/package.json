{
  "name": "@skymanuals/api",
  "version": "0.0.1",
  "description": "SkyManuals API server",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "jest --testPathPattern=test/integration --config=jest-e2e.json",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:test:setup": "prisma db push --schema=./prisma/test-schema.prisma",
    "db:test:clean": "prisma db push --force-reset --schema=./prisma/test-schema.prisma"
  },
  "dependencies": {
    "@skymanuals/types": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/config": "^3.1.1",
    "@prisma/client": "^5.7.0",
    "passport": "^0.7.0",
    "passport-openidconnect": "^0.6.0",
    "passport-auth0": "^2.3.0",
    "zod": "^3.22.4",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/exporter-console": "^1.16.0",
    "@opentelemetry/resources": "^1.16.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^21.6.1",
    "diff": "^5.1.0",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "@aws-sdk/client-ses": "^3.478.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-cloudfront": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "openai": "^4.24.1",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "@nestjs/websockets": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport": "^1.0.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.5.0",
    "prisma": "^5.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "@types/pdf-parse": "^1.1.1",
    "@types/diff": "^5.0.3",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/axios": "^0.14.0",
    "@types/socket.io-client": "^3.0.0",
    "socket.io-client": "^4.7.0"
  }
}
