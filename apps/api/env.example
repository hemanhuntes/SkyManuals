# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/skymanuals"
PGVECTOR_ENABLED=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=skymanuals-bundles
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id
CLOUDFRONT_DOMAIN_NAME=d1234567890.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id
CLOUDFRONT_PRIVATE_KEY=your_private_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
COMPLIANCE_THRESHOLD=0.7
MAX_EMBEDDING_DIMENSIONS=1536
EMBEDDING_MODEL=text-embedding-3-small
GPT_MODEL=gpt-4

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (AWS SES)
AWS_SES_REGION=us-east-1
FROM_EMAIL=noreply@skymanuals.com
REPLY_TO_EMAIL=support@skymanuals.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL_GENERAL=#general
SLACK_CHANNEL_ALERTS=#alerts
SLACK_CHANNEL_APPROVALS=#approvals

# Application Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# OpenTelemetry Configuration
OTEL_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_LOGS_ENDPOINT=http://localhost:4318/v1/logs
OTEL_SERVICE_NAME=skymanuals-api

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/skymanuals_test
TEST_REDIS_URL=redis://localhost:6379/1
